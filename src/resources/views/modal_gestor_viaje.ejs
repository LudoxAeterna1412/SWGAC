<!-- Formulario para gestión de viajes -->
<form class="user" id="viajeForm" onsubmit="updateViaje(event)"
    style="display: flex; flex-direction: column; gap: 15px; width: 90%; max-width: 1000px; margin: auto;">

    <!-- Campos requeridos -->
    <div style="display: flex; align-items: center; gap: 10px; flex-wrap: wrap; width: 100%;">
        <input type="text" class="form-control form-control-user" id="modalrutaOrigen"
            placeholder="Ruta Origen" required
            style="flex: 1; min-width: 200px; padding: 10px; border: 1px solid #ccc; border-radius: 5px; font-size: 14px;">

        <input type="text" class="form-control form-control-user" id="modalrutaDestino"
            placeholder="Ruta Destino" required
            style="flex: 1; min-width: 200px; padding: 10px; border: 1px solid #ccc; border-radius: 5px; font-size: 14px;">

        <input type="text" class="form-control form-control-user" id="modalduracionEstimada"
            placeholder="Duración Estimada (HH:MM:SS)" required
            style="flex: 1; min-width: 200px; padding: 10px; border: 1px solid #ccc; border-radius: 5px; font-size: 14px;">

        <input type="datetime-local" class="form-control form-control-user" id="modalhoraSalidaProgramada"
            placeholder="Hora Salida Programada" required
            style="flex: 1; min-width: 200px; padding: 10px; border: 1px solid #ccc; border-radius: 5px; font-size: 14px;">

        <input type="datetime-local" class="form-control form-control-user" id="modalhoraLlegadaProgramada"
            placeholder="Hora Llegada Programada" required
            style="flex: 1; min-width: 200px; padding: 10px; border: 1px solid #ccc; border-radius: 5px; font-size: 14px;">

        <select id="modalestadoViaje" required
            style="min-width: 200px; padding: 10px; border: 1px solid #ccc; border-radius: 5px; font-size: 14px;">
            <option value="">Estado del Viaje</option>
            <option value="programado">Programado</option>
            <option value="en_curso">En Curso</option>
            <option value="finalizado">Finalizado</option>
            <option value="cancelado">Cancelado</option>
        </select>
    </div>

    <!-- Campos opcionales -->
    <div style="display: flex; align-items: center; gap: 10px; flex-wrap: wrap; width: 100%;">
        <input type="datetime-local" class="form-control form-control-user" id="modalhoraSalidaReal"
            placeholder="Hora Salida Real"
            style="flex: 1; min-width: 200px; padding: 10px; border: 1px solid #ccc; border-radius: 5px; font-size: 14px;">

        <input type="datetime-local" class="form-control form-control-user" id="modalhoraLlegadaReal"
            placeholder="Hora Llegada Real"
            style="flex: 1; min-width: 200px; padding: 10px; border: 1px solid #ccc; border-radius: 5px; font-size: 14px;">

        <input type="text" class="form-control form-control-user" id="modalduracionReal"
            placeholder="Duración Real (HH:MM:SS)"
            style="flex: 1; min-width: 200px; padding: 10px; border: 1px solid #ccc; border-radius: 5px; font-size: 14px;">

        <input type="text" class="form-control form-control-user" id="modalprediccionTiempo"
            placeholder="Predicción de Tiempo (HH:MM:SS)"
            style="flex: 1; min-width: 200px; padding: 10px; border: 1px solid #ccc; border-radius: 5px; font-size: 14px;">

        <input type="text" class="form-control form-control-user" id="modalcodigoViaje"
            placeholder="Código de Viaje (autogenerado)" disabled
            style="flex: 1; min-width: 200px; padding: 10px; border: 1px solid #ccc; border-radius: 5px; font-size: 14px;">
    </div>

    <!-- Botón para enviar -->
    <input type="submit" class="btn btn-primary btn-user" value="Guardar Viaje"
        style="padding: 10px 20px; background-color: #007bff; border: none; border-radius: 5px; color: white; font-size: 14px; cursor: pointer;">
    <hr style="margin-top: 20px; border: none; border-top: 1px solid #ccc;">
</form>
